<table class='table table-striped'>
    <thead>
        <th>
            {% if assoc %}
                Associated
            {% else %}
                Unassociated
            {% endif %}
            {{ related_entity_names }}
        </th>
        <th>
            {% if assoc %}
                Unassociate
            {% else %}
                Associate
            {% endif %}
            {{ related_entity_name }}
        </th>
        <th>{{ related_entity_name }} Associations</th>
    </thead>

    <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.getName }}</td>
                <td>
                    {% if assoc %}
                        <form action='/delete/{{ this_entity }}/{{ this_item.getId }}/{{ related_entity}}/{{ item.getId }}' method='post'>
                            <input name='_method' value='delete' hidden>
                            <button type='submit' class='btn btn-xs btn-warning'>
                                Unassociate
                            </button>
                        </form>
                    {% else %}
                        <form action='/post/{{ this_entity }}/{{ this_item.getId }}/{{ related_entity}}/{{ item.getId }}' method='post'>
                            <button type='submit' class='btn btn-xs btn-primary'>
                                Associate
                            </button>
                        </form>
                    {% endif %}
                </td>
                <td>
                    <form action='/get/{{ related_entity }}/{{ item.getId }}/{{ this_entities }}' method='get'>
                        <button type='submit' class='btn btn-xs btn-info'>
                            View / Edit Associations
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
